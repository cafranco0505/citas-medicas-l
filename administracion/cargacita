    <div class="card-header">
        <i class="fa fa-table"></i> Listado Citas</div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Paciente</th>
                        <th>Asunto</th>
                        <th>Observaciones</th>
                        <th>Telefono</th>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Paciente</th>
                        <th>Asunto</th>
                        <th>Observaciones</th>
                        <th>Telefono</th>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    <?php for ($i = 0; $i < count($this->citas); $i++) { ?>
                        <tr
                        <?php if ($this->citas[$i]['ctasEstado'] == 'Pendiente') { ?>
                                class="table-warning"
                            <?php } else if ($this->citas[$i]['ctasEstado'] == 'Programada') { ?>
                                class="table-success"
                            <?php } else if ($this->citas[$i]['ctasEstado'] == 'Cancelada') { ?>
                                class="table-danger"
                            <?php } else { ?>
                                class="table-info"
                            <?php } ?>
                            >
                            <td><?php echo ucwords(strtolower($this->citas[$i]['uiosNombres'])); ?></td>
                            <td><?php echo $this->citas[$i]['espNombre']; ?></td>
                            <td><?php echo $this->citas[$i]['ctasObservaciones']; ?></td>
                            <td><?php echo $this->citas[$i]['uiosTelefono']; ?></td>
                            <td><?php echo $this->citas[$i]['ctasFecha']; ?></td>
                            <td><?php echo $this->citas[$i]['ctasHora']; ?></td>
                            <?php if ($this->citas[$i]['ctasEstado'] == 'Pendiente') { ?>
                                <td class="text-center"><button type="button" id="btnProgramar" value="<?php echo $this->citas[$i]['ctasId']; ?>" class="btn btn-success"><i class="fa fa-fw fa-clock-o"></i>Programar</button></td>
                            <?php } else if ($this->citas[$i]['ctasEstado'] == 'Programada') { ?>
                                <td class="text-center"><button type="button" id="btnProgramar" value="<?php echo $this->citas[$i]['ctasId']; ?>" class="btn btn-warning"><i class="fa fa-fw fa-clock-o"></i>Programada</button></td>
                            <?php } else if ($this->citas[$i]['ctasEstado'] == 'Cancelada') { ?>
                                <td class="text-center"><button type="button" class="btn btn-danger"><i class="fa fa-fw fa-window-close"></i>Cancelada</button></td>
                            <?php } else { ?>
                                <td class="text-center"><button type="button" class="btn btn-primary"><i class="fa fa-fw fa-check"></i>Atendida</button></td>
                            <?php } ?>
                        </tr>
                    <?php } ?>
                </tbody>
            </table>
        </div>
    </div>
</div>
